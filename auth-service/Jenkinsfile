pipeline {
    agent any

    environment {
        SERVICE_NAME = 'auth-service' // â¬… Change to product-service or order-service as needed
        DOCKER_USERNAME = 'avinash8476'
        IMAGE_TAG = "${BUILD_NUMBER}"
        DOCKER_IMAGE = "${DOCKER_USERNAME}/${SERVICE_NAME}:${IMAGE_TAG}"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', credentialsId: 'ecmp-apps-uat', url: 'https://github.com/avinash2354/ecmp-apps-uat.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    set -e
                    echo "ðŸ”¨ Building Docker image..."
                    docker build --pull --no-cache -t $DOCKER_IMAGE ./$SERVICE_NAME
                    docker build -t $DOCKER_IMAGE:latest ./$SERVICE_NAME
                '''
                echo "âœ… Docker image built: $DOCKER_IMAGE"
            }
        }
            
    }
}
