pipeline {
    agent any

    environment {
        SERVICE_NAME = 'auth-service'   // change for product-service / order-service
        DOCKER_USERNAME = 'avinash8476'
        DOCKER_IMAGE = "${DOCKER_USERNAME}/${SERVICE_NAME}:${BUILD_NUMBER}"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', credentialsId: 'ecmp-apps-uat', url: 'https://github.com/avinash2354/ecmp-apps-uat.git'
            echo "git repo clone  successfully"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}", "./${SERVICE_NAME}") 
                    echo "Docker image built successfully"
                }
            }
        }    
     stage('Push to Docker Hub') {
    steps {
        withCredentials([usernamePassword(credentialsId: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
            script {
                sh 'echo "üîê Logging in to Docker Hub..."'
                sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                sh 'echo "üöÄ Pushing Docker image..."'
                sh "docker push ${DOCKER_IMAGE}"
            }
        }
    }
}
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}   