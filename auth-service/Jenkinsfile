pipeline {
    agent any

    environment {
        SERVICE_NAME = 'auth-service'   // change for product-service / order-service
        DOCKER_USERNAME = 'avinash8476'
        DOCKER_IMAGE = "${DOCKER_USERNAME}/${SERVICE_NAME}:${BUILD_NUMBER}"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', credentialsId: 'ecmp-apps-uat', url: 'https://github.com/avinash2354/ecmp-apps-uat.git'
            echo "git repo clone  successfully"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}", "./${SERVICE_NAME}") 
                    echo "Docker image built successfully"
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script { 
                withCredentials([string(credentialsId: 'DOCKER_PASS', variable: 'DOCKER_PASS')]) {
                    sh 'docker login -u avinash8476 -p $(DOCKER_PASS)'
                }
                sh "docker push ${DOCKER_IMAGE}"
            }
        }   
    }
     stage('Save Docker Image to Local Storage') {
            steps {
                script {
                    sh "docker save -o ${SERVICE_NAME}-${BUILD_NUMBER}.tar ${DOCKER_IMAGE}"
                    echo "Docker image saved to ${SERVICE_NAME}-${BUILD_NUMBER}.tar"
                }
            }
        }
    }
}
