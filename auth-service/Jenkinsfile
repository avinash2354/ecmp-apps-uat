pipeline {
    agent any

    environment {
        SERVICE_NAME = 'auth-service'   // change for product-service / order-service
        DOCKER_USERNAME = 'avinash8476'
        DOCKER_IMAGE = "${DOCKER_USERNAME}/${SERVICE_NAME}:${BUILD_NUMBER}"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', credentialsId: 'ecmp-apps-uat', url: 'https://github.com/avinash2354/ecmp-apps-uat.git'
            echo "git repo clone  successfully"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}", "./${SERVICE_NAME}") 	
                }
            }
        }

        stage('Push to Docker Hub') {
    steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub-pass', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
            script {
                // Log in to Docker Hub securely
                sh """
                    echo 'üîê Logging in to Docker Hub...'
                    echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                """

                // Push the specified Docker image
                if (env.DOCKER_IMAGE) {
                    sh """
                        echo 'üöÄ Pushing Docker image: \$DOCKER_IMAGE'
                        docker push \$DOCKER_IMAGE
                    """
                } else {
                    error "DOCKER_IMAGE environment variable is not set!"
                }
            }
          }
       }
   }

}
}